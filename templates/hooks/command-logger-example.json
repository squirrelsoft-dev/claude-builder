{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "mkdir -p ~/.claude/logs && echo \"[$(date '+%Y-%m-%d %H:%M:%S')] $(jq -r '.parameters.command')\" >> ~/.claude/logs/bash-commands.log"
          }
        ]
      }
    ]
  }
}
